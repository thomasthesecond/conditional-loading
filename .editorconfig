# http://editorconfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
indent_size = 4
charset = utf-8
insert_final_newline = false
# end_of_line = lf | cr | crlf

[*.{js,json}]
indent_style = space
trim_trailing_whitespace = true

[*.{html,scss,css,php,rb,xml}]
indent_style = tab
trim_trailing_whitespace = true

[*.md]
indent_style = tab
trim_trailing_whitespace = false